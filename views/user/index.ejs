<p> user info page </p>

<h3><%= user.username %></h3>


<form action="/user/update" method="post">
  <input name="fullName" value="<%= user.fullName || '' %>" placeholder="Name">
  <input type="submit" value="Update" class="btn btn-lg btn-primary btn-block">
</form>
<hr>
<form action="/user/pass" method="post">
  <input name="password" value="" placeholder="Password">
  <input name="confirmation" value="" placeholder="Confirm Password">
  <input type="submit" value="Update" class="btn btn-lg btn-primary btn-block">
</form>
<hr>
<form action="/user/card" method="post" id="payment-form">
  <span class="payment-errors"></span>
  <div class="form-row">
    <label>
      <span>Name</span>
      <input type="text" size="20" data-stripe="name" name="name"/>
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>Card Number</span>
      <input type="text" size="20" data-stripe="number"/>
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>CVC</span>
      <input type="text" size="4" data-stripe="cvc"/>
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>Expiration (MM/YYYY)</span>
      <input type="text" size="2" data-stripe="exp-month"/>
    </label>
    <span> / </span>
    <input type="text" size="4" data-stripe="exp-year"/>
  </div>

  <button type="submit">Submit Payment</button>
</form>
<hr>
<form action="/charge" method="post">
  <input type="hidden" value="<%= user.id %>" name="user">
  <input type="submit" value="Charge the Customer" class="btn btn-lg btn-primary btn-block">
</form>
<hr>
<a href="https://connect.stripe.com/oauth/authorize?response_type=code&client_id=ca_3sLBbFQLGuENf9ZQstG6kAmNUjkVsaIJ&scope=read_write&state=1234" class="btn btn-default">Connect to Stripe</a>

<hr>

<form action="/invoice/create" method="post">
  <input type="text" name="title" value="" placeholder="Invoice Title">
  <input type="email" name="email" value="" placeholder="Payor Email">
  <input type="text" name="name" value="" placeholder="Payor Name">
  <input type="submit" value="Charge the Customer" class="btn btn-lg btn-primary btn-block">
</form>

<hr>

<form action="/cash/transfer" method="post">
  <input type="text" name="reciever" value="" placeholder="Reciever Email">
  <input type="text" name="amount" value="" placeholder="Amount to Send">
  <input type="submit" value="Charge the Customer" class="btn btn-lg btn-primary btn-block">
</form>
